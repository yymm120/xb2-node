// ctrl + q 可以查看每个配置项的意思。
{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
//  需要编译的文件
  "include": [
    "src/**/*"
  ],
//  排除编译的文件
  "exclude": [
    "node_modules",
    "dist"
  ]
}